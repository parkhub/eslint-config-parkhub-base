{
  "name": "@parkhub/eslint-config-parkhub-base",
  "description": "Parkhub's Canonical base Javascript eslint rules!",
  "author": "Daniel Olivares",
  "version": "0.0.0-semantically-released",
  "scripts": {
    "start": "nps",
    "commitmsg": "opt --in commit-msg --exec \"validate-commit-msg\"",
    "precommit": "opt --in pre-commit --exec \"npm start validate\""
  },
  "main": "dist/index.js",
  "engines": {
    "node": ">=4",
    "npm": ">=3"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "eslint-config-airbnb-base": "^12.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-strict-mode": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "codecov": "^2.3.0",
    "commitizen": "^2.9.6",
    "condition-codefresh": "^1.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "documentation": "^5.3.0",
    "eslint": "^4.6.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.0.0",
    "husky": "^0.14.3",
    "jest": "^21.0.1",
    "nps": "^5.7.1",
    "nps-utils": "^1.3.0",
    "opt-cli": "^1.5.2",
    "prettier-eslint-cli": "^4.3.0",
    "rimraf": "^2.6.1",
    "semantic-release": "^7.0.2",
    "validate-commit-msg": "^2.14.0"
  },
  "peerDependencies": {
    "eslint": "^4.6.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.0.0"
  },
  "release": {
    "verifyConditions": "condition-codefresh",
    "debug": false
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testMatch": [
      "**/__tests__/**/*test.js?(x)"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "modulePathIgnorePatterns": [
      "dist/*"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/parkhub/eslint-config-parkhub-base.git"
  },
  "bugs": {
    "url": "https://github.com/parkhub/eslint-config-parkhub-base/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
